<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/party_card"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_outline_location_on_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/loaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:text="대구 중구 1km"
                android:textColor="@color/text"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="41dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:background="@drawable/choiced_tag_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.476" />

            <TextView
                android:id="@+id/participate_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:text="2 / 5"
                android:textColor="@color/white"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="327dp"
            android:layout_height="108dp"
            app:cardCornerRadius="7dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:cardElevation="0dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/party_location_img"
                android:layout_width="327dp"
                android:layout_height="108dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/study" />

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/party_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:text="00하는 모임"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/party_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:text="2022.12.26 PM 1시 ~ 3시"
                android:textColor="@color/text"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/party_tag1"
                android:layout_width="68dp"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/pot_tag_btn"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/party_tag1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:gravity="center_horizontal"
                android:text="#카공"
                android:textColor="@color/text"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/party_tag1"
                app:layout_constraintEnd_toEndOf="@+id/party_tag1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/party_tag2"
                android:layout_width="68dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/pot_tag_btn"
                app:layout_constraintStart_toEndOf="@+id/party_tag1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/party_tag2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:gravity="center_horizontal"
                android:text="#공무원"
                android:textColor="@color/text"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/party_tag2"
                app:layout_constraintEnd_toEndOf="@+id/party_tag2"
                app:layout_constraintStart_toStartOf="@+id/party_tag2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/party_tag3"
                android:layout_width="93dp"
                android:layout_height="22dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/pot_tag_btn"
                app:layout_constraintStart_toEndOf="@+id/party_tag2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/party_tag3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:gravity="center_horizontal"
                android:text="#국가고시"
                android:textColor="@color/text"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/party_tag3"
                app:layout_constraintEnd_toEndOf="@+id/party_tag3"
                app:layout_constraintStart_toStartOf="@+id/party_tag3"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>