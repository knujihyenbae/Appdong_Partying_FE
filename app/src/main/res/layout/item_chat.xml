<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/chat_item_imageview_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>


        <TextView
            android:id="@+id/chat_item_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/chat_item_imageview_profile"
            android:layout_toRightOf="@id/chat_item_imageview_profile"
            android:text="방 이름 입니다"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/chat_item_textview_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_item_textview_title"
            android:layout_toEndOf="@+id/chat_item_imageview_profile"
            android:layout_toRightOf="@+id/chat_item_imageview_profile"
            android:layout_marginTop="7dp"
            android:text="마지막 메세지 입니다." />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
